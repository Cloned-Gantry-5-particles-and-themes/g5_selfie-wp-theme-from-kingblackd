{% extends '@nucleus/partials/particle.html.twig' %}

{% block particle %}

    <section class="time-line {{ particle.class|e }}">
        <!-- History Year -->
        {% for section in particle.sections %}
            <div class="job-ribbon">
                <span>
                    <i class="{{ section.icon }}"></i>{{ section.title }}
                </span>
            </div>
            <div class="timeline timeline-selfie">
                {% for key, item in particle.items %}
                    {% if section.title == item.section %}
                        {% if key % 2 == 0 %}
                            <div class="timeline-row item_fade_in selfie-resume-item-left {% if loop.first %}selfie-first-item{% endif %}">
                            {% else %}
                                <div class="timeline-row item_fade_in selfie-resume-item-right">
                                {% endif %}
                                <div class="timeline-time">
                                    <small>{{ item.date|e }}</small>{{ item.label|e }}
                                </div>
                                <div class="timeline-icon">
                                    <div class="bg-primary">
                                        <i class="{{ item.icon }}"></i>
                                    </div>
                                </div>
                                <div class="panel timeline-content">
                                    <div class="panel-body panel-body-resume">
                                        <div class="panel-body-right">
                                            <h4 class="strong strong-timeline">
                                                <a href="{{ item.link|e }}" title="{{ item.title }}">{{ item.title }}</a>
                                            </h4>
                                            <p>
                                                {{ item.desc|e }}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endfor %}
        </section>

    {% endblock %}
